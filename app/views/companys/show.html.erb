<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <div class="post-user-name">
        <%= @user.name %>
      </div>
      <p>
        <%= @company.number %>
      </p>
      <p>
        <%= @company.name %>
      </p>
      <p>
        <%= @company.information %>
      </p>
      <div class="post-time">
        <%= @company.created_at %>
      </div>
      <% if @company.user_id == current_user.id %>
        <div class="post-menus">
          <%= link_to("編集", "/companys/#{@company.id}/edit") %>
          <%= link_to("削除", "/companys/#{@company.id}", {method: :delete}) %>
        </div>
      <% end %>
    </div>
  </div>
</div>