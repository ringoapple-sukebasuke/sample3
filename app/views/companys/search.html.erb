<h1> 検索結果</h1>
<%= form_with url: search_path, method: :get, local: true do |form| %>
  <%= form.select :keyword, [ ['投稿が新しい順', 'new'],
                            ['投稿が古い順', 'old'],
                            ['いいねが多い順', 'likes'],
                            ['いいねが少ない順', 'dislikes'],
                            ['numberが高い順', 'number'],
                            ['時価総額が大きい', 'large'],
                            ['時価総額が小さい', 'small'],
                            ['配当利回りが高い', 'high'],
                            ['配当利回りが低い', 'low'],
                          ] %>
  <%= form.submit %>
<% end %>

<% @companys.each.with_index(1) do |company, i| %>
  第<%= i %>位
  <p><%= company.name %></p>
<% end %>